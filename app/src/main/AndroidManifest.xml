<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.aungkooo.geologist">

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.location.gps" android:required="true" />
    <uses-feature android:name="android.hardware.location.network" android:required="true" />
    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TraverseActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".TraverseEditActivity"
            android:label="@string/edit_traverse"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".LocationNewActivity"
            android:label="@string/new_location"
            android:parentActivityName=".TraverseActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".TraverseActivity" />
        </activity>

        <activity
            android:name=".LocationDetailActivity"
            android:label="Location Detail"
            android:parentActivityName=".LocationNewActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LocationNewActivity" />
        </activity>

        <activity
            android:name=".activity.StratigraphyTraverseActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".activity.StratigraphyLocationDetailActivity"
            android:parentActivityName=".activity.StratigraphyTraverseActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.StratigraphyTraverseActivity" />
        </activity>

        <activity
            android:name=".activity.StratigraphyLocationNewActivity"
            android:parentActivityName=".activity.StratigraphyTraverseActivity"
            android:theme="@style/AppTheme.DarkActionbar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.StratigraphyTraverseActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="me.aungkooo.geologist"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data android:name="firebase_crashlytics_collection_enabled" android:value="false" />

    </application>

</manifest>